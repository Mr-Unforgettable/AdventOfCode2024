{
	"tasks": {
		"setup": "deno run --allow-net --allow-read --allow-write scripts/setup.ts",
		"test": "deno test -- --verbose",
		"test-day": "deno run --allow-run scripts/test-day.ts",
		"solve-day": "deno run --allow-run scripts/solve-day.ts"
	},
	"imports": {
		"@std/assert": "jsr:@std/assert@1"
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 80,
		"indentWidth": 4,
		"semiColons": true,
		"singleQuote": true,
		"proseWrap": "preserve",
		"exclude": ["**/*.{txt, md}"]
	}
}
